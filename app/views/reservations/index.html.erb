<div id="reservations">
  <p id="notice"><%= notice %></p>

  <h1>Listing Reservations</h1>

  <table id="indexres">
    <thead>
      <tr>
        <th>Date</th>
        <th>Party Size</th>
        <th>Location</th>
        <th style="width: 20em">Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.time.strftime("%m/%d/%Y") %></td>
        <td><%= reservation.partysize %></td>
        <td><%= reservation.restaurant.nil? ? "none" : reservation.restaurant.name %></td>
        <td><%= reservation.note.nil? ? "none" : reservation.note %>
        <td class="minilinks"><%= link_to 'Details', reservation %></td>
        <td class="minilinks"><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td class="minilinks"><%= link_to 'Cancel', reservation, method: :delete, data: { confirm: 'Are you sure you want to cancel your reservation?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<div id="link_to_new_res">
  <%= link_to 'Make a New Reservation', new_reservation_path %>
</div>

</div>
